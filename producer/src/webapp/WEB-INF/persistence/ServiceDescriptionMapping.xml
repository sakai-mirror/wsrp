<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN"
                         "http://castor.exolab.org/mapping.dtd">

<mapping>

        <class name="org.apache.wsrp4j.persistence.driver.WSRPServiceDescription">
                     <map-to xml="ServiceDescription"/>


                <field name="requiresInitCookie"
                       type="java.lang.String"
                       get-method="getInitCookieRequired"
                       set-method="setInitCookieRequired">
                          <bind-xml name="requiresInitCookie" node="attribute"/>
                </field>

                <field name="requiresRegistration"
                       type="boolean"
                       get-method="isRequiresRegistration"
                       set-method="setRequiresRegistration">
                          <bind-xml name="requiresRegistration" node="attribute"/>
                </field>

                <field name="registrationPropertyDescription"
                       type="oasis.names.tc.wsrp.v1.types.ModelDescription"
                       get-method="getRegistrationPropertyDescription"
                       set-method="setRegistrationPropertyDescription">
                          <bind-xml name="ModelDescription" node="element"/>
                </field>

                <field name="userCategoryDescriptions"
                       type="oasis.names.tc.wsrp.v1.types.ItemDescription"
                       collection="array"
                       get-method="getUserCategoryDescriptions"
                       set-method="setUserCategoryDescriptions">
                          <bind-xml name="UserCategoryDescriptions" node="element"/>
                </field>

                <field name="customUserProfileItemDescriptions"
                       type="oasis.names.tc.wsrp.v1.types.ItemDescription"
                       collection="array"
                       get-method="getCustomUserProfileItemDescriptions"
                       set-method="setCustomUserProfileItemDescriptions">
                          <bind-xml name="CustomUserProfileItemDescriptions" node="element"/>
                </field>

                <field name="customWindowStateDescriptions"
                       type="oasis.names.tc.wsrp.v1.types.ItemDescription"
                       collection="array"
                       get-method="getCustomWindowStateDescriptions"
                       set-method="setCustomWindowStateDescriptions">
                          <bind-xml name="CustomWindowStateDescriptions" node="element"/>
                </field>

                <field name="customModeDescriptions"
                       type="oasis.names.tc.wsrp.v1.types.ItemDescription"
                       collection="array"
                       get-method="getCustomModeDescriptions"
                       set-method="setCustomModeDescriptions">
                          <bind-xml name="CustomModeDescriptions" node="element"/>
                </field>

                <field name="locales"
                       type="java.lang.String"
                       collection="array"
                       get-method="getLocales"
                       set-method="setLocales">
                          <bind-xml name="Locales" node="element"/>
                </field>

                <field name="extensions"
                       type="oasis.names.tc.wsrp.v1.types.Extension"
                       collection="array"
                       get-method="getExtensions"
                       set-method="setExtensions">
                          <bind-xml name="Extensions" node="element"/>
                </field>

        </class>

</mapping>

